<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Username" />

    <TextView
        android:id="@+id/username_warning_text"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="You must enter your UserName!"
        android:textColor="#FF0000"
        android:visibility="invisible"
        android:layout_below="@+id/editTextUsername" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/username_warning_text" />

    <TextView
        android:id="@+id/password_warning_text"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="You must enter your Password!"
        android:textColor="#FF0000"
        android:visibility="invisible"
        android:layout_below="@+id/editTextPassword" />

    <ToggleButton
        android:id="@+id/toggleButtonShowPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editTextPassword"
        android:layout_alignEnd="@id/editTextPassword"
        android:layout_alignTop="@id/editTextPassword"
        android:background="@null"
        android:textOff="Show"
        android:textOn="Hide" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:text="Login" />

</RelativeLayout>
